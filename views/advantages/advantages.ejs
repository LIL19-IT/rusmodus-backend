<div class="row">
<h2 class="page-title"><%= title %></h2>

<div class="btn-wrapper">
    <a href="/procurement_advantages/<%= procurementAdvantageId %>/advantages/create" class="btn-create">
        Create New <%= title %>
    </a>
</div>

<table class="styled-table">
    <thead>
        <tr>
            <th>N</th>
            <th>Number</th>
            <th>Description</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% advantages.forEach((adv, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= adv.number %></td>
                <td><%= adv.description %></td>
                <td>
                    <button class="btn btn-edit"
                        onclick="location.href='/procurement_advantages/<%= procurementAdvantageId %>/advantages/edit/<%= adv.id %>'">
                        Edit
                    </button>
                    <form action="/procurement_advantages/<%= procurementAdvantageId %>/advantages/remove/<%= adv.id %>" 
                          method="POST" style="display:inline;">
                        <button type="submit" 
                                onclick="return confirm('Are you sure you want to delete this advantage?')" 
                                class="btn btn-remove">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>