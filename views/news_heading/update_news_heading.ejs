<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/news_heading/edit/<%= heading.id %>" class="form-container">

    <input type="text" name="sub_title" value="<%= heading.sub_title %>" class="form-input" placeholder="Enter sub title">
    <input type="text" name="sub_title1" value="<%= heading.sub_title1 %>" class="form-input" placeholder="Enter second sub title">
    <input type="text" name="route" value="<%= heading.route %>" class="form-input" placeholder="Enter route">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>
