<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <% if (error) { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <form method="post" action="/admin/links/edit/<%= link.id %>" class="form-container">

    <select name="contactLinksId" class="form-input" required>
      <option value="">Select Contact Link</option>
      <% contactLinksList.forEach(cl => { %>
        <option value="<%= cl.id %>" <%= cl.id === contactLinksId ? 'selected' : '' %>>
          <%= cl.title %> 
        </option>
      <% }) %>
    </select>

    <input type="text" name="platform" class="form-input" placeholder="Enter Platform" value="<%= link.platform || '' %>" required>
      <div class="input-with-button">
      <input type="text" name="img_url" id="selectedImageInput" value="<%= link.img_url || '' %>" class="form-input"
        placeholder="Enter image or video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedImageInput">Choose</button>
    </div>
    <input type="text" name="url_links" class="form-input" placeholder="Enter URL" value="<%= link.url_links || '' %>" required>

    <button type="submit" class="form-button">Update</button>
  </form>
</div>

<div id="imageModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Select Media</h2>
        <div class="image-grid" id="imageGrid">
            <div id="imagesContainer">
                <h3>Images</h3>
            </div>
            <div id="videosContainer">
                <h3>Videos</h3>
            </div>
        </div>
    </div>
</div>