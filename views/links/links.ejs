<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/contacts_links/<%= contactLinksId %>/links/create" class="btn-create" >
      Create New Link
    </a>
  </div>

  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Platform</th>
        <th>Image</th>
        <th>URL Link</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% links.forEach((link, index)=> { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= link.platform %>
          </td>
          <td>
            <img src="<%= link.img_url %>" alt="Platform Image" style="max-width: 80px; height: auto;">
          </td>
          <td>
            <a href="<%= link.url_links %>" target="_blank">
              <%= link.url_links %>
            </a>
          </td>
          <td>
            <button class="btn btn-edit"
              onclick="location.href='/contacts_links/<%= contactLinksId %>/links/edit/<%= link.id %>'">Edit</button>
            <form action="/contacts_links/<%= contactLinksId %>/links/remove/<%= link.id %>" method="POST"
              style="display:inline;">
              <button type="" onclick="return confirm('Are you sure you want to delete this item?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>