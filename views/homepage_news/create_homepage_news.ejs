<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/homepage_news/create" class="form-container">
    <input type="text" name="lang" id="lang" class="form-input" placeholder="Enter language code" value="<%= lang || '' %>">

    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedMediaInput" class="form-input" placeholder="Enter image URL" value="<%= img_url || '' %>">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>

    <input type="text" name="title" id="title" class="form-input" placeholder="Enter title" value="<%= titleValue || '' %>">
    <input type="text" name="data" id="data" class="form-input" placeholder="Enter date (e.g., 2025-06-01)" value="<%= data || '' %>">
    <input type="text" name="link_about" id="link_about" class="form-input" placeholder="Enter link" value="<%= link_about || '' %>">

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages"><%= error %></p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer"><h3>Images</h3></div>
        <div id="videosContainer"><h3>Videos</h3></div>
      </div>
    </div>
  </div>
</div>