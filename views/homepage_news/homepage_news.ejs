<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/homepage_news/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Image</th>
                <th>Lang</th>
                <th>Title</th>
                <th>Date</th>
                <th>Link About</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% homepageNews.forEach((elem, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <a href="<%= elem.img_url %>" target="_blank">
                            <img src="<%= elem.img_url %>" alt="image" style="height: 60px; " />
                        </a>
                    </td>

                    <td>
                        <%= elem.lang %>
                    </td>


                    <td>
                        <%= elem.title %>
                    </td>
                    <td>
                        <%= elem.data %>
                    </td>
                    <td>
                        <%= elem.link_about %>
                    </td>
                    <td>
                        <button class="btn btn-edit" onclick="location.href='/admin/homepage_news/edit/<%= elem.id %>'">
                            Edit
                        </button>
                        <form action="/admin/homepage_news/remove/<%= elem.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

</div>