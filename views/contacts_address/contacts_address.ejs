<div class="row">
<h2 class="page-title"><%= title %></h2>

<div class="btn-wrapper">
  <a href="/admin/contacts_address/create" class="btn-create">Create New <%= title %></a>
</div>

<table class="styled-table">
  <thead>
    <tr>
      <th>N</th>
      <th>Lang</th>
      <th>Title</th>
      <th>Address</th>
      <th>Phone Title</th>
      <th>Phone Number</th>
      <th>Email Title</th>
      <th>Email Address</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% addresses.forEach((elem, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= elem.lang %></td>
        <td><%= elem.title %></td>
        <td><%= elem.address %></td>
        <td><%= elem.phone_title %></td>
        <td><%= elem.phone_number %></td>
        <td><%= elem.email_title %></td>
        <td><%= elem.email_address %></td>
 
        <td>
            <button class="btn btn-edit"
              onclick="location.href='/admin/contacts_address/edit/<%= elem.id %>'">Edit</button>

            <form action="/admin/contacts_address/remove/<%= elem.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
      </tr>
    <% }) %>
  </tbody>
</table>
</div>