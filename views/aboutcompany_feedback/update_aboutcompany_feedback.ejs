<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/aboutcompany_feedback/edit/<%= feedback.id %>" class="form-container">

    <input type="text" name="title" value="<%= feedback.title %>" class="form-input" placeholder="Enter title">
    <input type="text" name="description" value="<%= feedback.description %>" class="form-input" placeholder="Enter description">
    <input type="text" name="checkbox_text" value="<%= feedback.checkbox_text %>" class="form-input" placeholder="Enter checkbox text">
    <input type="text" name="btn_text" value="<%= feedback.btn_text %>" class="form-input" placeholder="Enter button text">
    <input type="text" name="placeholder_name" value="<%= feedback.placeholder_name %>" class="form-input" placeholder="Enter placeholder for name">
    <input type="text" name="placeholder_phone" value="<%= feedback.placeholder_phone %>" class="form-input" placeholder="Enter placeholder for phone">
    <input type="text" name="placeholder_email" value="<%= feedback.placeholder_email %>" class="form-input" placeholder="Enter placeholder for email">
    <input type="text" name="placeholder_question" value="<%= feedback.placeholder_question %>" class="form-input" placeholder="Enter placeholder for question">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
  <% } %>
</div>
