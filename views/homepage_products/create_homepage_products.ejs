<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/homepage_products/create" class="form-container">
    <input type="text" name="title" class="form-input" placeholder="Enter product title">
    <input type="text" name="route" class="form-input" placeholder="Enter route (e.g., /shop, /category)">

    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedMediaInput" class="form-input" placeholder="Enter image URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>

    <input type="text" name="lang" class="form-input" placeholder="e.g., en, fr">

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages"><%= error %></p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer"><h3>Images</h3></div>
        <div id="videosContainer"><h3>Videos</h3></div>
      </div>
    </div>
  </div>
</div>