<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/pets_intro/create" class="form-container">
    <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, fr)"
      value="<%= intro?.lang || '' %>" required>

    <div class="input-with-button">
      <input type="text" name="video_src" id="selectedMediaInput" class="form-input" placeholder="Enter video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>

    <input type="text" name="title" class="form-input" placeholder="Enter title" value="<%= intro?.title || '' %>"
      required>

    <input type="text" name="sub_title" class="form-input" placeholder="Enter subtitle"
      value="<%= intro?.sub_title || '' %>">

    <input type="text" name="route" class="form-input" placeholder="Enter route" value="<%= intro?.route || '' %>"
      required>

    <input type="text" name="sub_title1" class="form-input" placeholder="Enter second subtitle"
      value="<%= intro?.sub_title1 || '' %>">




    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
    <% } %>
</div>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer"><h3>Images</h3></div>
        <div id="videosContainer"><h3>Videos</h3></div>
      </div>
    </div>
  </div>
</div>