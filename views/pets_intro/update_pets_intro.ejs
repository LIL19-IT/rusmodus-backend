<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/pets_intro/edit/<%= intro.id %>" class="form-container">
    <div class="input-with-button">
      <input type="text" name="video_src" id="selectedMediaInput" class="form-input" value="<%= intro.video_src %>"
        placeholder="Enter video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>
    <input type="text" name="title" value="<%= intro.title %>" class="form-input" placeholder="Enter title" required>

    <input type="text" name="sub_title" value="<%= intro.sub_title %>" class="form-input" placeholder="Enter subtitle">

    <input type="text" name="route" value="<%= intro.route %>" class="form-input" placeholder="Enter route" required>

    <input type="text" name="sub_title1" value="<%= intro.sub_title1 %>" class="form-input"
      placeholder="Enter second subtitle">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>
</div>

<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Select Media</h2>
    <div class="image-grid" id="imageGrid">
      <div id="imagesContainer">
        <h3>Images</h3>
      </div>
      <div id="videosContainer">
        <h3>Videos</h3>
      </div>
    </div>
  </div>
</div>
</div>