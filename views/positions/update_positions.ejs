<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <% if (error) { %>
    <p style="color:red;"><%= error %></p>
  <% } %>

  <form method="post" action="/admin/positions/edit/<%= position.id %>" class="form-container">
    <select name="vacancyId" class="form-input" required>
      <% vacancies.forEach(vacancy => { %>
        <option value="<%= vacancy.id %>" <%= vacancy.id === position.aboutCompanyVacancyId ? 'selected' : '' %>>
          <%= vacancy.category %>
        </option>
      <% }) %>
    </select>

    <input type="text" name="title" value="<%= position.title %>" class="form-input" required>
    <input type="text" name="location" value="<%= position.location %>" class="form-input" required>
    <input type="text" name="description" value="<%= position.description %>" class="form-input" required>
    <input type="text" name="url_text" value="<%= position.url_text %>" class="form-input" required>
    <input type="text" name="url_link" value="<%= position.url_link %>" class="form-input" required>

    <button type="submit" class="form-button">Update</button>
  </form>
</div>
