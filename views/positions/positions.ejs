<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/aboutcompany_vacancies/<%= vacancyId %>/positions/create" class="btn-create">
            Create New Position
        </a>

    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Title</th>
                <th>Location</th>
                <th>Desc</th>
                <th>URL Text</th>
                <th>URL Link</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% positions.forEach((pos, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= pos.title %>
                    </td>
                    <td>
                        <%= pos.location %>
                    </td>
                    <td>
                        <%= pos.description %>
                    </td>
                    <td>
                        <%= pos.url_text %>
                    </td>
                    <td>
                        <a href="<%= pos.url_link %>" target="_blank">
                            <%= pos.url_link %>
                        </a>
                    </td>
                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/aboutcompany_vacancies/<%= vacancyId %>/positions/edit/<%= pos.id %>'">
                            Edit
                        </button>
                        <form action="/aboutcompany_vacancies/<%= vacancyId %>/positions/remove/<%= pos.id %>"
                            method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                    <% }) %>
        </tbody>
    </table>
</div>