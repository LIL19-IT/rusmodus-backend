<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/aboutcompany_info/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Title</th>
                <th>Desc</th>
                <th>Btn Text</th>

                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% infos.forEach((elem, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= elem.lang %>
                    </td>
                    <td>
                        <%= elem.title %>
                    </td>
                    <td>
                        <%= elem.description %>
                    </td>
                    <td>
                        <%= elem.btn_text %>
                    </td>

                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/admin/aboutcompany_info/edit/<%= elem.id %>'">Edit</button>

                        <form action="/admin/aboutcompany_info/remove/<%= elem.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>