<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/news_content/create" class="btn-create">Create New <%= title %></a>
  </div>

  <div class="table-scroll-wrapper">
    <table class="styled-table">
      <thead>
        <tr>
          <th>N</th>
          <th>Lang</th>
          <th>Title</th>
          <th>Sub Title</th>
          <th>Sub Title 1</th>
          <th>Sub Title 2</th>
          <th>Date</th>
          <th>Main Image</th>
          <th>Name</th>
          <th>Name 1</th>
          <th>Name 2</th>
          <th>Name 3</th>
          <th>Img1</th>
          <th>Img2</th>
          <th>Img3</th>
          <th>Img4</th>
          <th>Img5</th>
          <th>Img6</th>
          <th>Img7</th>
          <th>Img8</th>
          <th>Img11</th>
          <th>Info Title</th>
          <th>News Title</th>
          <th>Video Src</th>
          <th>Description</th>
          <th>Description1</th>
          <th>Description2</th>
          <th>Description3</th>
          <th>Url Text</th>
          <th>Url Link</th>
          <th>Url Text1</th>
          <th>Url Link1</th>
          <th>Url Text2</th>
          <th>Url Link2</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% newsList.forEach((elem, index)=> { %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= elem.lang %>
            </td>
            <td>
              <%= elem.title %>
            </td>
            <td>
              <%= elem.sub_title %>
            </td>
            <td>
              <%= elem.sub_title1 %>
            </td>
            <td>
              <%= elem.sub_title2 %>
            </td>
            <td>
              <%= elem.data %>
            </td>
            <td>
              <a href="<%= elem.img_url %>" target="_blank">
                <img src="<%= elem.img_url %>" alt="Image" style="height: 50px;">
              </a>
            </td>
            <td>
              <%= elem.name %>
            </td>

            <td>
              <%= elem.name1 || '-' %>
            </td>
            <td>
              <%= elem.name2 || '-' %>
            </td>
            <td>
              <%= elem.name3 || '-' %>
            </td>
            <td>
              <% if (elem.img1_url) { %>
                <a href="<%= elem.img1_url %>" target="_blank">
                  <img src="<%= elem.img1_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img2_url) { %>
                <a href="<%= elem.img2_url %>" target="_blank">
                  <img src="<%= elem.img2_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img3_url) { %>
                <a href="<%= elem.img3_url %>" target="_blank">
                  <img src="<%= elem.img3_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img4_url) { %>
                <a href="<%= elem.img4_url %>" target="_blank">
                  <img src="<%= elem.img4_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img5_url) { %>
                <a href="<%= elem.img5_url %>" target="_blank">
                  <img src="<%= elem.img5_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img6_url) { %>
                <a href="<%= elem.img6_url %>" target="_blank">
                  <img src="<%= elem.img6_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img7_url) { %>
                <a href="<%= elem.img7_url %>" target="_blank">
                  <img src="<%= elem.img7_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img8_url) { %>
                <a href="<%= elem.img8_url %>" target="_blank">
                  <img src="<%= elem.img8_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>
            <td>
              <% if (elem.img11_url) { %>
                <a href="<%= elem.img11_url %>" target="_blank">
                  <img src="<%= elem.img11_url %>" alt="Image" style="height: 50px;">
                </a>
                <% } else { %>-<% } %>
            </td>

            <td>
              <%= elem.info_title %>
            </td>
            <td>
              <%= elem.news_title || '-' %>
            </td>

            <td>
              <% if (elem.video_src) { %>
                <video src="<%= elem.video_src %>" controls muted></video>
                <% } else { %>-<% } %>
            </td>

            <td>
              <%= elem.description ? (elem.description.length> 50 ? elem.description.substring(0, 50) + '...' :
                elem.description) : '-' %>
            </td>
            <td>
              <%= elem.description1 || '-' %>
            </td>
            <td>
              <%= elem.description2 || '-' %>
            </td>
            <td>
              <%= elem.description3 || '-' %>
            </td>

            <td>
              <%= elem.url_text || '-' %>
            </td>
            <td>
              <%= elem.url_link || '-' %>
            </td>
            <td>
              <%= elem.url_text1 || '-' %>
            </td>
            <td>
              <%= elem.url_link1 || '-' %>
            </td>
            <td>
              <%= elem.url_text2 || '-' %>
            </td>
            <td>
              <%= elem.url_link2 || '-' %>
            </td>

            <td>
              <button class="btn btn-edit"
                onclick="location.href='/admin/news_content/edit/<%= elem.id %>'">Edit</button>
              <form action="/admin/news_content/remove/<%= elem.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                  class="btn btn-remove">
                  Remove
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>