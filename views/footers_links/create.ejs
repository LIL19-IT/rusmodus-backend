<div class="page-wrapper">
  <h2><%= title %></h2>

  <form action="/admin/footers_links/create" method="POST">
    <div class="form-group">
      <label>Lang</label>
      <input type="text" name="lang" value="<%= footer.lang || '' %>" required>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= footer.title || '' %>" required>
    </div>

    <h3>Links</h3>
    <table id="linksTable" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Title</th>
          <th>Route</th>
          <th>Lang</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addLinkBtn">+ Add Link</button>
    </div>

    <input type="submit" value="Create Footer Link" class="create">
  </form>
</div>

<script>
  const addBtn = document.getElementById("addLinkBtn");
  const tableBody = document.querySelector("#linksTable tbody");

  function getNextIndex() {
    return tableBody.querySelectorAll("tr").length;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td><input type="hidden" name="links[${index}][id]" value=""><input type="text" name="links[${index}][title]" value=""></td>
      <td><input type="text" name="links[${index}][route]" value=""></td>
      <td><input type="text" name="links[${index}][lang]" value=""></td>
      <td><button type="button" class="removeRowBtn">Remove</button></td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });
</script>
