<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/aboutcompany_vacancies/edit/<%= vacancy.id %>" class="form-container">

    <input type="text" name="category" value="<%= vacancy.category %>" class="form-input" placeholder="Enter category"
      required>

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>
</div>