<div class="page-wrapper">

  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/aboutcompany_vacancies/create" class="form-container">
       <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, ru)"
      value="<%= vacancy?.lang || '' %>" required>

    <input type="text" name="category" class="form-input" placeholder="Enter category"
      value="<%= vacancy?.category || '' %>" required>
 
    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>

</div>