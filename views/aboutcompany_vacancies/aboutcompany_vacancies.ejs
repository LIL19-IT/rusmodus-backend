<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/aboutcompany_vacancies/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Category</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% vacancies.forEach((vacancy, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= vacancy.lang %>
                    </td>
                    <td>
                        <%= vacancy.category %>
                    </td>

                       <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/admin/aboutcompany_vacancies/edit/<%= vacancy.id %>'">Edit</button>

                        <form action="/admin/aboutcompany_vacancies/remove/<%= vacancy.id %>" method="POST"
                            style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

    <div style="margin-top:50px;">
  <h2 class="page-title">Positions</h2>

  <div class="btn_wrapper">
    <a href="/admin/positions/create" class="btn-create">
      + Add Position
    </a>
  </div>

  <table class="styled-table" style="margin-top:50px;">
    <thead>
      <tr>
        <th>N</th>
        <th>Title</th>
        <th>Location</th>
        <th>Desc</th>
        <th>URL Text</th>
        <th>URL Link</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% let charIndex = 1; %>
      <% vacancies.forEach(vacancy => { %>
        <% vacancy.positions.forEach(pos => { %>
          <tr>
            <td><%= charIndex++ %></td>
            <td><%= pos.title %></td>
            <td><%= pos.location %></td>
            <td><%= pos.description %></td>
            <td><%= pos.url_text %></td>
            <td><a href="<%= pos.url_link %>" target="_blank"><%= pos.url_link %></a></td>
            <td>
              <button class="btn btn-edit"
                onclick="location.href='/admin/positions/edit/<%= pos.id %>'">Edit</button>
              <form action="/admin/positions/remove/<%= pos.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure?')" class="btn btn-remove">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% }) %>
    </tbody>
  </table>
</div>

</div>

