<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/homepage-about/create" class="btn-create">Create New <%= title %></a>
    </div>

    <div class="table-scroll-wrapper">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>N</th>
                    <th>Lang</th>
                    <th>Img 1</th>
                    <th>Img 2</th>
                    <th>Title</th>
                    <th>Sub Title</th>
                    <th>Desc 1</th>
                    <th>Desc 2</th>
                    <th>Btn Text</th>
                    <th>Route</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% homepageAbouts.forEach((elem, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= elem.lang %>
                        </td>
                        <td>
                            <a href="<%= elem.img1_url %>" target="_blank">
                                <img src="<%= elem.img1_url %>" alt="image" style="height: 50px" />
                            </a>
                        </td>
                        <td>
                            <a href="<%= elem.img2_url %>" target="_blank">
                                <img src="<%= elem.img2_url %>" alt="image" style="height: 50px" />
                            </a>
                        </td>
                        <td>
                            <%= elem.title %>
                        </td>
                        <td>
                            <%= elem.sub_title %>
                        </td>
                        <td>
                            <%= elem.description1 %>
                        </td>
                        <td>
                            <%= elem.description2 %>
                        </td>
                        <td>
                            <%= elem.btn_text %>
                        </td>
                        <td>
                            <%= elem.route %>
                        </td>
                        <td>
                            <button class="btn btn-edit"
                                onclick="location.href='/admin/homepage-about/edit/<%= elem.id %>'">Edit</button>
                            <form action="/admin/homepage-about/remove/<%= elem.id %>" method="POST"
                                style="display:inline;">
                                <button type="submit"
                                    onclick="return confirm('Are you sure you want to delete this item?')"
                                    class="btn btn-remove">
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

</div>