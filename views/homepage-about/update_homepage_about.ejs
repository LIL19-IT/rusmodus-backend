<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/homepage-about/edit/<%= homepageAbout.id %>" class="form-container">
    
    <div class="input-with-button">
      <input type="text" name="img1_url" id="img1_url" class="form-input" value="<%= homepageAbout.img1_url %>">
      <button type="button" class="small-button openMediaModal" data-target="img1_url">Choose</button>
    </div>

    <div class="input-with-button">
      <input type="text" name="img2_url" id="img2_url" class="form-input" value="<%= homepageAbout.img2_url %>">
      <button type="button" class="small-button openMediaModal" data-target="img2_url">Choose</button>
    </div>

    <input type="text" name="title" id="title" class="form-input" value="<%= homepageAbout.title %>">
    <input type="text" name="sub_title" id="sub_title" class="form-input" value="<%= homepageAbout.sub_title %>">
    <textarea name="description1" id="description1" class="form-input"><%= homepageAbout.description1 %></textarea>
    <textarea name="description2" id="description2" class="form-input"><%= homepageAbout.description2 %></textarea>
    <input type="text" name="btn_text" id="btn_text" class="form-input" value="<%= homepageAbout.btn_text %>">
    <input type="text" name="route" id="route" class="form-input" value="<%= homepageAbout.route %>">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages"><%= error %></p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer">
          <h3>Images</h3>
        </div>
        <div id="videosContainer">
          <h3>Videos</h3>
        </div>
      </div>
    </div>
  </div>
</div>
