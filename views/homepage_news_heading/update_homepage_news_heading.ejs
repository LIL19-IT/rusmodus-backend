<div class="page-wrapper">
<h2 class="title">
    <%= title %>
  </h2>

<form method="post" action="/admin/homepage_news_heading/edit/<%= heading.id %>" class="form-container">
    <input type="text" name="title" value="<%= heading.title %>" class="form-input">
    <input type="text" name="link_news" value="<%= heading.link_news %>" class="form-input">
    <input type="text" name="route" value="<%= heading.route %>" class="form-input">

    <button type="submit" class="form-button">Update</button>
</form>
  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>
</div>