<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/homepage_advantages_heading/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Image</th>
                <th>Lang</th>
                <th>Title</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <% headings.forEach((elem, index)=> { %>
            <tr>
                <td>
                    <%= index + 1 %>
                </td>
                <td>
                    <% if (elem.img_url) { %>
                        <% if (/\.(mp4|webm)$/i.test(elem.img_url)) { %>
                            <video src="<%= elem.img_url %>" style="height: 50px;" controls muted></video>
                            <% } else { %>
                                <a href="<%= elem.img_url %>" target="_blank">
                                    <img src="<%= elem.img_url %>" alt="image" style="height: 50px;" />
                                </a>
                                <% } %>
                                    <% } else { %>
                                        <span>No media</span>
                                        <% } %>
                </td>

                <td>
                    <%= elem.lang %>
                </td>
                <td>
                    <%= elem.title %>
                </td>
                <td>
                    <button class="btn btn-edit"
                        onclick="location.href='/admin/homepage_advantages_heading/edit/<%= elem.id %>'">Edit</button>

                    <form action="/admin/homepage_advantages_heading/remove/<%= elem.id %>" method="POST"
                        style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                            class="btn btn-remove">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
    </table>
</div>