<div class="page-wrapper">
    <h2 class="title">
        <%= title %>
    </h2>

    <form method="post" action="/admin/aquaculture_sortOptions/edit/<%= sortOption.id %>" class="form-container">

        <input type="text" name="name" value="<%= sortOption.name %>" class="form-input"
            placeholder="Enter sort option name">

        <button type="submit" class="form-button">Update</button>
    </form>

    <% if (error) { %>
        <p class="error-messages">
            <%= error %>
        </p>
        <% } %>
</div>