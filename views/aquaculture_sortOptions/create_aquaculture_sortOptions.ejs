<div class="page-wrapper">
    <h2 class="title">
        <%= title %>
    </h2>

    <form method="post" action="<%= formAction %>" class="form-container">

        <input type="text" name="name" class="form-input" placeholder="Enter sort option name"
            value="<%= sortOption?.name || '' %>">

        <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, ru)"
            value="<%= sortOption?.lang || '' %>">

        <button type="submit" class="form-button">
            <%= buttonText || 'Save' %>
        </button>
    </form>

    <% if (error) { %>
        <p class="error-messages">
            <%= error %>
        </p>
        <% } %>
</div>