<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/questions_and_answers/edit/<%= question.id %>" class="form-container">

    <input
      type="text"
      name="sub_title"
      value="<%= question.sub_title %>"
      class="form-input"
      placeholder="Enter sub title"
    >

    <input
      type="text"
      name="route"
      value="<%= question.route %>"
      class="form-input"
      placeholder="Enter route"
    >

    <input
      type="text"
      name="sub_title1"
      value="<%= question.sub_title1 %>"
      class="form-input"
      placeholder="Enter sub title 1"
    >

    <input
      type="text"
      name="title"
      value="<%= question.title %>"
      class="form-input"
      placeholder="Enter title"
    >

    <input
      type="text"
      name="description"
      value="<%= question.description %>"
      class="form-input"
      placeholder="Enter description"
    >

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>
