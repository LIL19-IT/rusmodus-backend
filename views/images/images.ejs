<div class="section">
  <div class="row ">

    <h1>Upload Media</h1>

    <form action="/admin/images/upload" method="post" enctype="multipart/form-data">
      <label for="file-upload" class="custom-file-upload">Choose Image or Video</label>
      <input id="file-upload" type="file" name="file" accept="image/*,video/*" required>
      <button type="submit">Upload</button>
    </form>

    <hr>

    <h2>Uploaded Images</h2>
    <% if (images && images.length> 0) { %>
      <ul>
        <% images.forEach(image=> { %>
          <li>
            <a href="/images/<%= image %>" target="_blank">
              <img src="/images/<%= image %>" alt="<%= image %>" style="height: 100px;"><br>
            </a>
            <strong>/images/<%= image %></strong>

            <form action="/admin/images/delete" method="post"
              onsubmit="return confirm('Are you sure you want to delete this image?')" style="display:inline;">
              <input type="hidden" name="filename" value="<%= image %>">
              <input type="hidden" name="type" value="image">
              <button type="submit">Delete</button>
            </form>
          </li>
          <% }) %>
      </ul>
      <% } else { %>
        <p>No images uploaded yet.</p>
        <% } %>

          <hr>

          <h2>Uploaded Videos</h2>
          <% if (videos && videos.length> 0) { %>
            <ul>
              <% videos.forEach(video=> { %>
                <li>
                  <video src="/videos/<%= video %>" controls style=" height: auto;"></video><br>
                  <strong>/videos/<%= video %></strong>

                  <form action="/admin/images/delete" method="post"
                    onsubmit="return confirm('Are you sure you want to delete this video?')" style="display:inline;">
                    <input type="hidden" name="filename" value="<%= video %>">
                    <input type="hidden" name="type" value="video">
                    <button type="submit">Delete</button>
                  </form>
                </li>
                <% }) %>
            </ul>
            <% } else { %>
              <p>No videos uploaded yet.</p>
              <% } %>
  </div>
</div>