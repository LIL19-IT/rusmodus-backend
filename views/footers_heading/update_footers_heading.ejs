<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/footers_heading/edit/<%= heading.id %>" class="form-container">

    <input type="text" name="title" value="<%= heading.title %>" class="form-input" placeholder="Enter title">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>
