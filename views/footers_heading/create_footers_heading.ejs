<div class="page-wrapper">

  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/footers_heading/create" class="form-container">
        <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, fr)" value="<%= heading ? heading.lang : '' %>">
    <input type="text" name="title" class="form-input" placeholder="Enter title" value="<%= heading ? heading.title : '' %>">

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
      <p class="error-messages"><%= error %></p>
  <% } %>

</div>
