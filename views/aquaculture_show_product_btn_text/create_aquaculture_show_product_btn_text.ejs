<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="<%= formAction %>" class="form-container">
    <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, ru)"
      value="<%= btnText?.lang || '' %>">

    <input type="text" name="text" class="form-input" placeholder="Enter button text"
      value="<%= btnText?.text || '' %>">



    <button type="submit" class="form-button">
      <%= buttonText || 'Save' %>
    </button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
    <% } %>
</div>