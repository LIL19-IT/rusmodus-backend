<div class="page-wrapper">

  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/aboutcompany_vacancies_heading/create" class="form-container">
    <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, fr)">
    <input type="text" name="title" class="form-input" placeholder="Enter title">
    <input type="text" name="description" class="form-input" placeholder="Enter description">
    <input type="text" name="url_text" class="form-input" placeholder="Enter URL text">
    <input type="text" name="url_link" class="form-input" placeholder="Enter URL link">

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>

</div>