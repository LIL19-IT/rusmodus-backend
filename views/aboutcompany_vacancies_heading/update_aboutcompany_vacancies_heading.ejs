<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/aboutcompany_vacancies_heading/edit/<%= heading.id %>" class="form-container">

    <input type="text" name="title" value="<%= heading.title %>" class="form-input" placeholder="Enter title">
    <input type="text" name="description" value="<%= heading.description %>" class="form-input" placeholder="Enter description">
    <input type="text" name="url_text" value="<%= heading.url_text %>" class="form-input" placeholder="Enter URL text">
    <input type="text" name="url_link" value="<%= heading.url_link %>" class="form-input" placeholder="Enter URL link">
 

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>
