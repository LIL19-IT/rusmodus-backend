<div class="row">
    <h2 class="page-title">
    <%= title %>
</h2>

<div class="btn-wrapper">
    <a href="/admin/homepage-advantages/create" class="btn-create">Create New <%= title %></a>
</div>

<table class="styled-table">
    <thead>
        <tr>
            <th>N</th>
            <th>Lang</th>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% homepageAdvantages.forEach((elem, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= elem.lang %></td>
                <td>
                    <% if (elem.img_url) { %>
                        <% if (/\.(mp4|webm)$/i.test(elem.img_url)) { %>
                            <video src="<%= elem.img_url %>" controls muted></video>
                            <% } else { %>
                                <a href="<%= elem.img_url %>" target="_blank">
                                    <img src="<%= elem.img_url %>" alt="image"  />
                                </a>
                                <% } %>
                                    <% } else { %>
                                        <span>No media</span>
                                        <% } %>
                </td>
                <td><%= elem.title %></td>
                <td><%= elem.description %></td>
                <td>
                    <button class="btn btn-edit" onclick="location.href='/admin/homepage-advantages/edit/<%= elem.id %>'">
                        Edit
                    </button>
                    <form action="/admin/homepage-advantages/remove/<%= elem.id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                            class="btn btn-remove">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

</div>