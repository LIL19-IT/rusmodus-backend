<div class="rows">
  <h2 class="page-title">Update Footer Schedule</h2>

  <form action="/admin/footers_schedule/update/<%= id %>" method="post">
    <div class="actions">
      <input type="submit" value="Save">
      <a href="/admin/footers_schedule" class="back-btn">Back</a>
    </div>

    <div class="form-group">
      <label>Lang:</label>
      <input type="text" name="lang" value="<%= footer.lang %>" />
    </div>

    <div class="form-group">
      <label>Title:</label>
      <input type="text" name="title" value="<%= footer.title %>" />
    </div>
  </form>

  <form action="/admin/footers_schedule/update-schedules/<%= id %>" method="post">
    <h3>Schedule List</h3>
    <table id="scheduleTable" class="table" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Lang</th>
          <th>Days</th>
          <th>Hours</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% (footer.schedule_list || []).forEach((s, index) => { %>
          <tr>
            <td>
              <input type="hidden" name="schedule_list[<%= index %>][id]" value="<%= s.id %>">
              <input type="text" name="schedule_list[<%= index %>][lang]" value="<%= s.lang %>">
            </td>
            <td><input type="text" name="schedule_list[<%= index %>][days]" value="<%= s.days %>"></td>
            <td><input type="text" name="schedule_list[<%= index %>][hours]" value="<%= s.hours %>"></td>
            <td><button type="button" class="removeRowBtn">Remove</button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addScheduleBtn">+ Add Schedule</button>
      <button type="submit">Save Schedules</button>
    </div>
  </form>
</div>

<script>
  const addBtn = document.getElementById("addScheduleBtn");
  const tableBody = document.querySelector("#scheduleTable tbody");

  function getNextIndex() {
    const rows = tableBody.querySelectorAll("tr");
    let maxIndex = -1;
    rows.forEach(tr => {
      const hiddenInput = tr.querySelector("input[type='hidden']");
      if (hiddenInput) {
        const name = hiddenInput.name;
        const match = name.match(/\[(\d+)\]/);
        if (match) {
          const idx = parseInt(match[1]);
          if (idx > maxIndex) maxIndex = idx;
        }
      }
    });
    return maxIndex + 1;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td><input type="hidden" name="schedule_list[${index}][id]" value=""><input type="text" name="schedule_list[${index}][lang]" value=""></td>
      <td><input type="text" name="schedule_list[${index}][days]" value=""></td>
      <td><input type="text" name="schedule_list[${index}][hours]" value=""></td>
      <td><button type="button" class="removeRowBtn">Remove</button></td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });

  document.querySelectorAll(".removeRowBtn").forEach(btn => {
    btn.addEventListener("click", e => e.target.closest("tr").remove());
  });
</script>
