<div class="page-wrapper">
  <h2><%= title %></h2>

  <form action="/admin/footers_schedule/create" method="POST">
    <div class="form-group">
      <label>Lang</label>
      <input type="text" name="lang" value="<%= footer.lang || '' %>" required>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= footer.title || '' %>" required>
    </div>

    <h3>Schedule List</h3>
    <table id="scheduleTable" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Lang</th>
          <th>Days</th>
          <th>Hours</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addScheduleBtn">+ Add Schedule</button>
    </div>

    <input type="submit" value="Create Footer Schedule" class="create">
  </form>
</div>

<script>
  const addBtn = document.getElementById("addScheduleBtn");
  const tableBody = document.querySelector("#scheduleTable tbody");

  function getNextIndex() {
    return tableBody.querySelectorAll("tr").length;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td><input type="hidden" name="schedule_list[${index}][id]" value=""><input type="text" name="schedule_list[${index}][lang]" value=""></td>
      <td><input type="text" name="schedule_list[${index}][days]" value=""></td>
      <td><input type="text" name="schedule_list[${index}][hours]" value=""></td>
      <td><button type="button" class="removeRowBtn">Remove</button></td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });
</script>
