<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

    <form method="post" action="/admin/aquaculture_categories/edit/<%= category.id %>" class="form-container">
    <input
      type="text"
      name="name"
      value="<%= category.name %>"
      class="form-input"
      placeholder="Enter category name"
      required
    >

    <div class="input-with-button">
      <input
        type="text"
        name="img_url"
        id="selectedMediaInput"
        value="<%= category.img_url %>"
        class="form-input"
        placeholder="Enter image URL"
        required
      >
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer"><h3>Images</h3></div>
        <div id="videosContainer"><h3>Videos</h3></div>
      </div>
    </div>
  </div>
</div>
