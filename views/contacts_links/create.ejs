<div class="page-wrapper">
  <h2><%= title %></h2>

  <form action="/admin/contacts_links/create" method="POST">
    <div class="form-group">
      <label>Lang</label>
      <input type="text" name="lang" value="<%= contactLink?.lang || '' %>" required>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= contactLink?.title || '' %>" required>
    </div>

    <h3>Links</h3>
    <table id="linksTable" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Platform</th>
          <th>Image URL</th>
          <th>URL Link</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addLinkBtn">+ Add Link</button>
    </div>

    <input type="submit" value="Create Contact Links" class="create">
  </form>
</div>

<script>
  const addBtn = document.getElementById("addLinkBtn");
  const tableBody = document.querySelector("#linksTable tbody");

  function getNextIndex() {
    return tableBody.querySelectorAll("tr").length;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td>
        <input type="hidden" name="links[${index}][id]" value="">
        <input type="text" name="links[${index}][platform]" value="">
      </td>
      <td><input type="text" name="links[${index}][img_url]" value=""></td>
      <td><input type="text" name="links[${index}][url_links]" value=""></td>
      <td><button type="button" class="removeRowBtn">Remove</button></td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });
</script>
