<div class="row">
  <h2 class="page-title"><%= title %></h2>

  <div class="btn-wrapper">
    <a href="/admin/contacts_links/create" class="btn-create">
      Create New <%= title %>
    </a>
  </div>

  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Lang</th>
        <th>Title</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% contactLinks.forEach((contact, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= contact.lang %></td>
          <td><%= contact.title %></td>
          <td>
            <button class="btn btn-edit"
              onclick="location.href='/admin/contacts_links/edit/<%= contact.id %>'">
              Details
            </button>

            <form action="/admin/contacts_links/remove/<%= contact.id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-remove"
                onclick="return confirm('Are you sure you want to delete this record?')">
                Remove
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
