<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/news_categories/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Name</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% categories.forEach((elem, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                     <td><%= elem.lang %></td>
                    <td>
                        <%= elem.name %>
                    </td>
                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/admin/news_categories/edit/<%= elem.id %>'">Edit</button>

                        <form action="/admin/news_categories/remove/<%= elem.id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>