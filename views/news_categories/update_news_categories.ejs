<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/news_categories/edit/<%= category.id %>" class="form-container">

    <input type="text" name="name" value="<%= category.name %>" class="form-input" placeholder="Enter category name">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>
