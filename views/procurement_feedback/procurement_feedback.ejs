<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/procurement_feedback/create" class="btn-create">Create New <%= title %></a>
    </div>
   <div class="table-scroll-wrapper">
    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Title</th>
                <th>Desc</th>
                <th>Checkbox Text</th>
                <th>BtnText</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Question</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% feedbacks.forEach((elem, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                                        <td>
                        <%= elem.lang %>
                    </td>
                    <td>
                        <%= elem.title %>
                    </td>
                    <td>
                        <%= elem.description %>
                    </td>
                    <td>
                        <%= elem.checkbox_text %>
                    </td>
                    <td>
                        <%= elem.btn_text %>
                    </td>
                    <td>
                        <%= elem.placeholder_name %>
                    </td>
                    <td>
                        <%= elem.placeholder_phone %>
                    </td>
                    <td>
                        <%= elem.placeholder_email %>
                    </td>
                    <td>
                        <%= elem.placeholder_question %>
                    </td>
                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/admin/procurement_feedback/edit/<%= elem.id %>'">Edit</button>

                        <form action="/admin/procurement_feedback/remove/<%= elem.id %>" method="POST"
                            style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    </div>
</div>