<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/procurement_suppliers/create" class="btn-create">
            Create New <%= title %>
        </a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Title</th>
                <th>Description</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>

        <tbody>
            <% suppliers.forEach((supplier, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= supplier.lang %></td>
                    <td><%= supplier.title %></td>
                    <td><%= supplier.description %></td>
                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/admin/procurement_suppliers/edit/<%= supplier.id %>'">
                            Details
                        </button>

                        <form action="/admin/procurement_suppliers/remove/<%= supplier.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-remove"
                                onclick="return confirm('Are you sure you want to delete this supplier?')">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
