<div class="page-wrapper">
  <h2><%= title %></h2>

  <form action="/admin/procurement_suppliers/create" method="POST">
    <div class="form-group">
      <label>Lang</label>
      <input type="text" name="lang" value="<%= supplier?.lang || '' %>" required>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= supplier?.title || '' %>" required>
    </div>

    <div class="form-group">
      <label>Description</label>
      <input type="text" name="description" value="<%= supplier?.description || '' %>">
    </div>

    <h3>Products</h3>
    <table id="productsTable" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addProductBtn">+ Add Product</button>
    </div>

    <input type="submit" value="Create Supplier" class="create">
  </form>
</div>

<script>
  const addBtn = document.getElementById("addProductBtn");
  const tableBody = document.querySelector("#productsTable tbody");

  function getNextIndex() {
    return tableBody.querySelectorAll("tr").length;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td>
        <input type="hidden" name="products[${index}][id]" value="">
        <input type="text" name="products[${index}][name]" value="">
      </td>
      <td>
        <button type="button" class="removeRowBtn">Remove</button>
      </td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });
</script>
