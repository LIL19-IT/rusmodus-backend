<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/news_info/create" class="btn-create">Create New <%= title %></a>
  </div>
<div class="table-scroll-wrapper">
  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Image</th>
        <th>Lang</th>
        <th>Date</th>
        <th>Title</th>
        <th>Link About</th>
        <th>Categories</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% newsInfos.forEach((elem, index)=> { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <a href="<%= elem.img_url %>" target="_blank">
              <img src="<%= elem.img_url %>" alt="Product Image" style="height: 50px;">
            </a>
          </td>
          <td>
            <%= elem.lang %>
          </td>
          <td>
            <%= elem.data %>
          </td>
          <td>
            <%= elem.title %>
          </td>
          <td>
            <%= elem.link_about %>
          </td>
          <td>
            <%= elem.categories %>
          </td>
          <td>
            <button class="btn btn-edit" onclick="location.href='/admin/news_info/edit/<%= elem.id %>'">Edit</button>

            <form action="/admin/news_info/remove/<%= elem.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  </div>
</div>