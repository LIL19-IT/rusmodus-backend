<div class="page-wrapper">

  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/news_info/create" class="form-container">

    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedImageInput" class="form-input"
        placeholder="Enter image or video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedImageInput">Choose</button>
    </div>
    <input type="text" name="lang" class="form-input" placeholder="Enter language code (e.g., en, ru)" required>
    <input type="text" name="data" class="form-input" placeholder="Enter date (e.g., 2025-08-04)" required>

    <input type="text" name="title" class="form-input" placeholder="Enter title" required>

    <input type="text" name="link_about" class="form-input" placeholder="Enter link about" required>

    <input type="text" name="categories" class="form-input" placeholder="Enter categories" required>


    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>

</div>

<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Select Media</h2>
    <div class="image-grid" id="imageGrid">
      <div id="imagesContainer">
        <h3>Images</h3>
      </div>
      <div id="videosContainer">
        <h3>Videos</h3>
      </div>
    </div>
  </div>
</div>
</div>