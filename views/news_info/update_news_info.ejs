<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/news_info/edit/<%= newsInfo.id %>" class="form-container">

    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedMediaInput" class="form-input" value="<%= newsInfo.img_url %>" placeholder="Enter Image URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>
    <input type="text" name="data" value="<%= newsInfo.data %>" class="form-input" placeholder="Enter date (e.g., 2025-08-04)" required>
    <input type="text" name="title" value="<%= newsInfo.title %>" class="form-input" placeholder="Enter title" required>
    <input type="text" name="link_about" value="<%= newsInfo.link_about %>" class="form-input" placeholder="Enter link about" required>
    <input type="text" name="categories" value="<%= newsInfo.categories %>" class="form-input" placeholder="Enter categories" required>
    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
  <% } %>
</div>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer">
          <h3>Images</h3>
        </div>
        <div id="videosContainer">
          <h3>Videos</h3>
        </div>
      </div>
    </div>
  </div>
</div>