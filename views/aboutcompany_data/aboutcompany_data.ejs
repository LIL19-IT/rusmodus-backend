<div class="row">
<h2 class="page-title"><%= title %></h2>

<div class="btn-wrapper">
    <a href="/admin/aboutcompany_data/create" class="btn-create">Create New <%= title %></a>
</div>

<table class="styled-table">
    <thead>
        <tr>
            <th>N</th>
            <th>Image</th>
             <th>Lang</th>
            <th>Sub Title</th>
            <th>Desc</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% datas.forEach((elem, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                 <td>
                        <a href="<%= elem.img_url %>" target="_blank">
                            <img src="<%= elem.img_url %>" alt="Image" style="height: 50px;">
                        </a>
                    </td>
                <td><%= elem.lang %></td>
                <td><%= elem.sub_title %></td>
                <td><%= elem.description %></td>
                <td>
                    <button class="btn btn-edit" onclick="location.href='/admin/aboutcompany_data/edit/<%= elem.id %>'">Edit</button>
                    <form action="/admin/aboutcompany_data/remove/<%= elem.id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')" class="btn btn-remove">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
</div>