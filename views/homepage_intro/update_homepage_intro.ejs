<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/homepage_intro/edit/<%= homepageIntro.id %>" class="form-container">
    <div class="input-with-button">
      <input type="text" name="video_src" id="selectedMediaInput" class="form-input" value="<%= homepageIntro.video_src %>" placeholder="Enter video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>

    <input type="text" name="title" class="form-input" value="<%= homepageIntro.title %>">
    <textarea name="description" class="form-input" rows="4"><%= homepageIntro.description %></textarea>

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages"><%= error %></p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer"><h3>Images</h3></div>
        <div id="videosContainer"><h3>Videos</h3></div>
      </div>
    </div>
  </div>
</div>