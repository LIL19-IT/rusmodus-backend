<div class="row">
  <h2 class="page-title">Farm Animals Content</h2>

  <div class="btn-group" style="margin-bottom: 20px;">
    <a href="/admin/farmanimals_content/create" class="add-btn">
      <i class="fa fa-plus"></i> Add New Content
    </a>
  </div>

  <div class="farmanimals-list">
    <% contents.forEach((animal, index) => { %>
      <div class="animal-item" style="position: relative; padding-right: 40px; margin-bottom: 15px;">
        <img src="<%= animal.img_url %>" alt="<%= animal.title %>" width="150" />
        <h3>
          <a href="/admin/farmanimals_content/detail/<%= animal.id %>">
            <%= index + 1 %>. <%= animal.title %>
          </a>
        </h3>

        <form method="POST" action="/admin/farmanimals_content/delete/<%= animal.id %>" 
              style="position: absolute; right: 10px;">
          <button type="submit" style="border: none; background: none; cursor: pointer;" 
                  onclick="return confirm('Are you sure you want to delete this item?')">
            <i class="fa fa-trash" style="color: red; font-size: 18px;"></i>
          </button>
        </form>
      </div>
    <% }) %>
  </div>
</div>
