<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/farmanimals_sortOption/create" class="form-container">
    <input type="text" name="lang" class="form-input" placeholder="Language (e.g. en, ru)"
      value="<%= sortOption?.lang || '' %>" required>
    <input type="text" name="name" class="form-input" placeholder="Sort Option Name"
      value="<%= sortOption?.name || '' %>" required>



    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
    <% } %>
</div>