<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/farmanimals_sortOption/create" class="btn-create">Create New <%= title %></a>
  </div>

  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Lang</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% sortOptions.forEach((option, index)=> { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= option.lang %>
          </td>
          <td>
            <%= option.name %>
          </td>
          <td>
            <button class="btn btn-edit"
              onclick="location.href='/admin/farmanimals_sortOption/edit/<%= option.id %>'">Edit</button>

            <form action="/admin/farmanimals_sortOption/remove/<%= option.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this option?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>