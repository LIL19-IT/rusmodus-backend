<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/procurement_suppliers/<%= supplierId %>/products/create" class="btn-create">
            Create New Product
        </a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Product Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= product.name %>
                    </td>

                    <td>
                        <button class="btn btn-edit"
                            onclick="location.href='/procurement_suppliers/<%= supplierId %>/products/edit/<%= product.id %>'">Edit</button>
                        <form action="/procurement_suppliers/<%= supplierId %>/products/remove/<%= product.id %>"
                            method="POST" style="display:inline;">
                            <button type="" onclick="return confirm('Are you sure you want to delete this item?')"
                                class="btn btn-remove">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>