<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/farmanimals_intro/edit/<%= intro.id %>" class="form-container">
    <div class="input-with-button">
      <input type="text" name="video_src" id="selectedMediaInput" class="form-input" value="<%= intro.video_src %>" placeholder="Enter video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedMediaInput">Choose</button>
    </div>
    <input type="text" class="form-input" name="title" placeholder="Title" value="<%= intro.title %>" required>
    <input type="text" class="form-input" name="sub_title" placeholder="Subtitle" value="<%= intro.sub_title %>">
    <input type="text" class="form-input" name="route" placeholder="Route" value="<%= intro.route %>" required>
    <input type="text" class="form-input" name="sub_title1" placeholder="Subtitle 1" value="<%= intro.sub_title1 %>">

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-message">
      <%= error %>
    </p>
    <% } %>
</div>

<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Select Media</h2>
    <div class="image-grid" id="imageGrid">
      <div id="imagesContainer">
        <h3>Images</h3>
      </div>
      <div id="videosContainer">
        <h3>Videos</h3>
      </div>
    </div>
  </div>
</div>
</div>