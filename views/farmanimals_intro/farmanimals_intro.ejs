<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/farmanimals_intro/create" class="btn-create">Create New <%= title %></a>
  </div>
  <div class="table-scroll-wrapper">
    <table class="styled-table">
      <thead>
        <tr>
          <th>N</th>
          <th>Video</th>
          <th>Lang</th>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Subtitle 1</th>
          <th>Route</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% intros.forEach((intro, index)=> { %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <video src="<%= intro.video_src %>" controls muted></video>
            </td>
            <td>
              <%= intro.lang %>
            </td>
            <td>
              <%= intro.title %>
            </td>
            <td>
              <%= intro.sub_title %>
            </td>
            <td>
              <%= intro.sub_title1 %>
            </td>
            <td>
              <%= intro.route %>
            </td>
            <td>
              <button class="btn btn-edit"
                onclick="location.href='/admin/farmanimals_intro/edit/<%= intro.id %>'">Edit</button>

              <form action="/admin/farmanimals_intro/remove/<%= intro.id %>" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this intro?')"
                  class="btn btn-remove">
                  Remove
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>