<div class="page-wrapper">
  <h2><%= title %></h2>

  <form action="/admin/procurement_advantages/create" method="POST">
    <div class="form-group">
      <label>Lang</label>
      <input type="text" name="lang" value="<%= advantage.lang || '' %>" required>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input type="text" name="title" value="<%= advantage.title || '' %>" required>
    </div>

    <h3>Advantages</h3>
    <table id="advantagesTable" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Number</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addAdvantageBtn">+ Add Advantage</button>
    </div>

    <input type="submit" value="Create Procurement Advantage" class="create">
  </form>
</div>

<script>
const addBtn = document.getElementById("addAdvantageBtn");
const tableBody = document.querySelector("#advantagesTable tbody");

function getNextIndex() {
  return tableBody.querySelectorAll("tr").length;
}

addBtn.addEventListener("click", () => {
  const index = getNextIndex();
  const newRow = document.createElement("tr");
  newRow.innerHTML = `
    <td>
      <input type="hidden" name="advantages[${index}][id]" value="">
      <input type="text" name="advantages[${index}][number]" value="">
    </td>
    <td>
      <input type="text" name="advantages[${index}][description]" value="">
    </td>
    <td><button type="button" class="removeRowBtn">Remove</button></td>
  `;
  tableBody.appendChild(newRow);
  newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
});
</script>
