<div class="rows">
  <h2 class="page-title">Update Procurement Advantage</h2>

  <form action="/admin/procurement_advantages/update/<%= id %>" method="post">
    <div class="actions">
      <input type="submit" value="Save">
      <a href="/admin/procurement_advantages" class="back-btn">Back</a>
    </div>

    <div class="form-group">
      <label>Lang:</label>
      <input type="text" name="lang" value="<%= advantage.lang %>" />
    </div>

    <div class="form-group">
      <label>Title:</label>
      <input type="text" name="title" value="<%= advantage.title %>" />
    </div>
  </form>

  <form action="/admin/procurement_advantages/update-advantages/<%= id %>" method="post">
    <h3>Advantages</h3>
    <table id="advantagesTable" class="table" border="1" cellpadding="8">
      <thead>
        <tr>
          <th>Number</th>
          <th>Description</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% (advantage.advantages || []).forEach((item, index) => { %>
          <tr>
            <td>
              <input type="hidden" name="advantages[<%= index %>][id]" value="<%= item.id %>">
              <input type="text" name="advantages[<%= index %>][number]" value="<%= item.number %>">
            </td>
            <td>
              <input type="text" name="advantages[<%= index %>][description]" value="<%= item.description %>">
            </td>
            <td><button type="button" class="removeRowBtn">Remove</button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="btn-group">
      <button type="button" id="addAdvantageBtn">+ Add Advantage</button>
      <button type="submit">Save Advantages</button>
    </div>
  </form>
</div>

<script>
  const addBtn = document.getElementById("addAdvantageBtn");
  const tableBody = document.querySelector("#advantagesTable tbody");

  function getNextIndex() {
    const rows = tableBody.querySelectorAll("tr");
    let maxIndex = -1;
    rows.forEach(tr => {
      const hiddenInput = tr.querySelector("input[type='hidden']");
      if (hiddenInput) {
        const name = hiddenInput.name;
        const match = name.match(/\[(\d+)\]/);
        if (match) {
          const idx = parseInt(match[1]);
          if (idx > maxIndex) maxIndex = idx;
        }
      }
    });
    return maxIndex + 1;
  }

  addBtn.addEventListener("click", () => {
    const index = getNextIndex();
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td>
        <input type="hidden" name="advantages[${index}][id]" value="">
        <input type="text" name="advantages[${index}][number]" value="">
      </td>
      <td>
        <input type="text" name="advantages[${index}][description]" value="">
      </td>
      <td><button type="button" class="removeRowBtn">Remove</button></td>
    `;
    tableBody.appendChild(newRow);
    newRow.querySelector(".removeRowBtn").addEventListener("click", () => newRow.remove());
  });

  document.querySelectorAll(".removeRowBtn").forEach(btn => {
    btn.addEventListener("click", e => e.target.closest("tr").remove());
  });
</script>
