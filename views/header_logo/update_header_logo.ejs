<div class="page-wrapper">
  <h2 class="title"><%= title %></h2>

  <form method="post" action="/admin/header_logo/edit/<%= headerLogo.id %>" class="form-container">
    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedImageInput" value="<%= headerLogo.src %>" class="form-input" placeholder="Enter image or video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedImageInput">Choose</button>
    </div>

    <button type="submit" class="form-button">Update</button>
  </form>

  <% if (error) { %>
    <p class="error-messages"><%= error %></p>
  <% } %>

  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Select Media</h2>
      <div class="image-grid" id="imageGrid">
        <div id="imagesContainer">
          <h3>Images</h3>
        </div>
        <div id="videosContainer">
          <h3>Videos</h3>
        </div>
      </div>
    </div>
  </div>
</div>