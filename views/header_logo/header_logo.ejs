<div class="row">
    <h2 class="page-title"><%= title %></h2>

<div class="btn-wrapper">
    <a href="/admin/header_logo/create" class="btn-create">Create New <%= title %></a>
</div>

<table class="styled-tables">
    <thead>
        <tr>
            <th>N</th>
            <th>Img</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>

    <% headerLogos.forEach((elem, index)=> { %>
        <tr>
            <td><%= index + 1 %></td>
            <td>
                <a href="<%= elem.src %>" target="_blank">
                    <img src="<%= elem.src %>" alt="Logo" style="height: 50px;">
                </a>
            </td>
            <td>
                <button class="btns btn-edit" onclick="location.href='/admin/header_logo/edit/<%= elem.id %>'">Edit</button>
          
                <form action="/admin/header_logo/remove/<%= elem.id %>" method="POST" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')" class="btn btn-remove">
                        Remove
                    </button>
                </form>
            </td>
        </tr>
    <% }) %>
</table>

</div>