<div class="row">
    <h2 class="page-title">
        <%= title %>
    </h2>

    <div class="btn-wrapper">
        <a href="/admin/footers_info/create" class="btn-create">Create New <%= title %></a>
    </div>

    <table class="styled-table">
        <thead>
            <tr>
                <th>N</th>
                <th>Lang</th>
                <th>Title</th>
                <th>Tel</th>
                <th>Email</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
<tbody>
  <% footersInfo.forEach((footer, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= footer.lang %></td>
      <td><%= footer.title %></td>
      <td><%= footer.tel %></td>
      <td><%= footer.email %></td>
      <td>
        <button class="btn btn-edit"
          onclick="location.href='/admin/footers_info/edit/<%= footer.id %>'">Details</button>

        <form action="/admin/footers_info/remove/<%= footer.id %>" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this footer info?')"
            class="btn btn-remove">Remove</button>
        </form>
      </td>
    </tr>
  <% }) %>
</tbody>

    </table>
</div>
