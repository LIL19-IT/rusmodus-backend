<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/farmanimals_categories/create" class="btn-create">Create New <%= title %></a>
  </div>

  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Name</th>
        <th>Image</th>
        <th>Language</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% categories.forEach((category, index)=> { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= category.name %>
          </td>
          <td>
            <a href="<%= category.img_url %>" target="_blank">
              <img src="<%= category.img_url %>" alt="Image" style="height: 50px;">
            </a>
          </td>
          <td>
            <%= category.lang %>
          </td>
          <td>
            <button class="btn btn-edit"
              onclick="location.href='/admin/farmanimals_categories/edit/<%= category.id %>'">Edit</button>

            <form action="/admin/farmanimals_categories/remove/<%= category.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>