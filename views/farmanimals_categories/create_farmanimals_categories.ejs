<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/farmanimals_categories/create" class="form-container">
    <input type="text" class="form-input" name="name" placeholder="Name" value="<%= category.name || '' %>" required>
    <div class="input-with-button">
      <input type="text" name="img_url" id="selectedImageInput" class="form-input"
        placeholder="Enter image or video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedImageInput">Choose</button>
    </div>
    <input type="text" class="form-input" name="lang" placeholder="Language (e.g. en, ru)"
      value="<%= category.lang || '' %>" required>

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>
</div>


<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Select Media</h2>
    <div class="image-grid" id="imageGrid">
      <div id="imagesContainer">
        <h3>Images</h3>
      </div>
      <div id="videosContainer">
        <h3>Videos</h3>
      </div>
    </div>
  </div>
</div>
</div>