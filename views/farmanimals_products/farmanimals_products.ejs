<div class="row">
  <h2 class="page-title">
    <%= title %>
  </h2>

  <div class="btn-wrapper">
    <a href="/admin/farmanimals_products/create" class="btn-create">Create New Farmanimals Products</a>
  </div>

  <table class="styled-table">
    <thead>
      <tr>
        <th>N</th>
        <th>Lang</th>
        <th>Image</th>
        <th>Name</th>
        <th>Desc</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% products.forEach((product, index)=> { %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= product.lang %>
          </td>
          <td>
            <a href="<%= product.img_url %>" target="_blank">
              <img src="<%= product.img_url %>" alt="Image" style="height: 50px;">
            </a>
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.description %>
          </td>
          <td>
            <%= product.category_name %>
          </td>
          <td>
            <button class="btn btn-edit"
              onclick="location.href='/admin/farmanimals_products/edit/<%= product.id %>'">Edit</button>

            <form action="/admin/farmanimals_products/remove/<%= product.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this product?')"
                class="btn btn-remove">
                Remove
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>