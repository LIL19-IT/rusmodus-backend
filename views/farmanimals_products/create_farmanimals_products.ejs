<div class="page-wrapper">
  <h2 class="title">
    <%= title %>
  </h2>

  <form method="post" action="/admin/farmanimals_products/create" class="form-container">
     <div class="input-with-button">
      <input type="text" name="img_url" id="selectedImageInput" class="form-input"
        placeholder="Enter image or video URL">
      <button type="button" class="small-button openMediaModal" data-target="selectedImageInput">Choose</button>
    </div>

    <input type="text" name="name" class="form-input" placeholder="Product Name" value="<%= product.name || '' %>"
      required>

    <input type="text" name="description" class="form-input" placeholder="Description"
      value="<%= product.description || '' %>" required>

    <input type="text" name="lang" class="form-input" placeholder="Language (e.g. en, ru)"
      value="<%= product.lang || '' %>" required>

    <input type="text" name="category_name" class="form-input" placeholder="Category Name"
      value="<%= product.category_name || '' %>" required>

    <button type="submit" class="form-button">Create</button>
  </form>

  <% if (error) { %>
    <p class="error-messages">
      <%= error %>
    </p>
    <% } %>
</div>

<div id="imageModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>Select Media</h2>
    <div class="image-grid" id="imageGrid">
      <div id="imagesContainer">
        <h3>Images</h3>
      </div>
      <div id="videosContainer">
        <h3>Videos</h3>
      </div>
    </div>
  </div>
</div>
</div>