<div class="row">
  <h2 class="page-title">Aquaculture Content</h2>

  <div class="btn-group" style="margin-bottom: 20px;">
    <a href="/admin/aquaculture_content/create" class="add-btn">
      <i class="fa fa-plus"></i> Add New Content
    </a>
  </div>

  <div class="aquaculture-list">
    <% contents.forEach((item, index) => { %>
      <div class="aquaculture-item" style="position: relative; padding-right: 40px; margin-bottom: 15px;">
        <img src="<%= item.img_url %>" alt="<%= item.title %>" width="150" />
        <h3>
          <a href="/admin/aquaculture_content/detail/<%= item.id %>">
            <%= index + 1 %>. <%= item.title %>
          </a>
        </h3>

        <form method="POST" action="/admin/aquaculture_content/delete/<%= item.id %>" 
              style="position: absolute; right: 10px;">
          <button type="submit" style="border: none; background: none; cursor: pointer;" 
                  onclick="return confirm('Are you sure you want to delete this item?')">
            <i class="fa fa-trash" style="color: red; font-size: 18px;"></i>
          </button>
        </form>
      </div>
    <% }) %>
  </div>
</div>
